<%@val s: skinny.Skinny %>
<%@val items: Seq[model.Anime] %>
<%@val totalPages: Int %>
<%@val page: Int = s.params.page.map(_.toString.toInt).getOrElse(1) %>

<%-- Be aware of package imports.
 1. src/main/scala/templates/ScalatePackage.scala
 2. scalateTemplateConfig in project/Build.scala
--%>

<h3>${s.i18n.getOrKey("anime.list")}</h3>
<hr/>
#for (notice <- s.flash.notice)
  <p class="alert alert-info">${notice}</p>
#end

#if (totalPages > 1)
  <ul class="pagination">
    <li>
      <a href="${s.url(Controllers.animes.indexUrl, "page" -> 1)}">&laquo;</a>
    </li>
    <% val maxPage = Math.min(totalPages, if (page <= 5) 11 else page + 5) %>
    #for (i <- Math.max(1, maxPage - 10) to maxPage)
      <li class="${if (i == page) "active" else ""}">
        <a href="${s.url(Controllers.animes.indexUrl, "page" -> i)}">${i}</a>
      </li>
    #end
    <li>
      <a href="${s.url(Controllers.animes.indexUrl, "page" -> totalPages)}">&raquo;</a>
    </li>
    <li>
      <span>${Math.min(page, totalPages)} / ${totalPages}</span>
    </li>
  </ul>
#end

<table class="table table-bordered">
<thead>
  <tr>
    <th>${s.i18n.getOrKey("anime.animeId")}</th>
    <th>${s.i18n.getOrKey("anime.name")}</th>
    <th>${s.i18n.getOrKey("anime.year")}</th>
    <th>${s.i18n.getOrKey("anime.seasonType")}</th>
    <th>${s.i18n.getOrKey("anime.productionCompanyId")}</th>
    <th>${s.i18n.getOrKey("anime.directorId")}</th>
    <th>${s.i18n.getOrKey("anime.originalPiece")}</th>
    <th>${s.i18n.getOrKey("anime.officialSiteUrl")}</th>
    <th>${s.i18n.getOrKey("anime.wikipediaSiteUrl")}</th>
    <th></th>
  </tr>
</thead>
<tbody>
  #for (item <- items)
  <tr>
    <td>${item.animeId}</td>
    <td>${item.name}</td>
    <td>${item.year}</td>
    <td>${item.seasonType}</td>
    <td>${item.productionCompanyId}</td>
    <td>${item.directorId}</td>
    <td>${item.originalPiece}</td>
    <td>${item.officialSiteUrl}</td>
    <td>${item.wikipediaSiteUrl}</td>
    <td>
      <a href="${s.url(Controllers.animes.showUrl, "anime_id" -> item.animeId)}" class="btn btn-default">${s.i18n.getOrKey("detail")}</a>
      <a href="${s.url(Controllers.animes.editUrl, "anime_id" -> item.animeId)}" class="btn btn-info">${s.i18n.getOrKey("edit")}</a>
      <a data-method="delete" data-confirm="${s.i18n.getOrKey("anime.delete.confirm")}"
        href="${s.url(Controllers.animes.destroyUrl, "anime_id" -> item.animeId)}" rel="nofollow" class="btn btn-danger">${s.i18n.getOrKey("delete")}</a>
    </td>
  </tr>
  #end
  #if (items.isEmpty)
  <tr>
    <td colspan="10">${s.i18n.getOrKey("empty")}</td>
  </tr>
  #end
</tbody>
</table>

<a href="${s.url(Controllers.animes.newUrl)}" class="btn btn-primary">${s.i18n.getOrKey("new")}</a>
